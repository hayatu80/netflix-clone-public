%section.sign_in.container
  .row
    .span10.offset1
      %header
        %h1 Sign in
        = form_tag '/login' do
          = label_tag :email
          = text_field_tag :email
          %br
          = label_tag :password
          = password_field_tag :password
          %br
          = submit_tag "Login", class: 'btn btn-primary'     