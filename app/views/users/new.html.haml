
%section.register.container
  .row
    .span10.offset1
      %header
        %h1 Register
        / Used bootstrap_form
        = bootstrap_form_for(@user, html: { class: 'form-horizontal' }, help: :block) do |f|
          = f.alert_message "Please fix the errors below."
          = f.text_field :email
          = f.password_field :password, placeholder: '*Minimum 6 characters'
          = f.text_field :fullname
          = f.actions do
            = f.primary 'Register', disable_with: 'Saving...'

